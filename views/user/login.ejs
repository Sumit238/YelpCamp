<% layout('/layout/boilerplate.ejs') %>
  <div class="row mt-5">
    <div class="col-sm-6 col-12 offset-sm-3 shadow p-3 mb-5 bg-body rounded">
      <h1 class="text-center">Login</h1>
      <form action="/user/login" method="post" novalidate class="g-3 needs-validation">
        <div class="mb-3">
          <label for="username" class="form-label fw-bold">Username</label>
          <input type="text" required class="form-control" id="username" name="username" />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label fw-bold">Password</label>
          <input type="password" class="form-control" id="password" name="password" required />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <button type="submit" class="btn btn-primary mt-3 w-50% align-self-center col-6">
          Login
        </button>
        <div class="mt-3 col-12">
          <span><b>Don't have an account ? </b>
            <a href="/user/register">Register here</a></span>
        </div>
      </form>
    </div>
  </div>
<% layout('/layout/boilerplate.ejs') %>
  <div class="row mt-5">
    <div class="col-sm-6 col-12 offset-sm-3 shadow p-3 mb-5 bg-body rounded">
      <h1 class="text-center">Register</h1>
      <form action="/user/register" method="post" novalidate class="g-3 needs-validation">
        <div class="mb-3">
          <label for="username" class="form-label fw-bold">Username</label>
          <input type="text" required class="form-control" id="username" name="username" />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label fw-bold">Password</label>
          <input type="password" class="form-control" id="password" name="password" required />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label fw-bold">Email</label>
          <input type="email" class="form-control" id="email" name="email" required
            placeholder="example.email@domain.com" />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <button type="submit" class="btn btn-primary mt-3 w-50% align-self-center col-6">
          Register
        </button>
        <div class="mt-3 col-6">
          <span><b>Have account ? </b><a href="/user/login">Login here</a></span>
        </div>
      </form>
    </div>
  </div>